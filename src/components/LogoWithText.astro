---
import { Icon } from 'astro-icon/components';
import Logo from '@components/Logo.astro';
---

<div class="logo">
  <Logo isLink={false} width="100%" height="100%" />
</div>
<Icon class="logo-text" name="logo-text" />

<style lang="scss">
  .logo {
    width: 93px;
    height: 60px;

    @media screen and (min-width: $bp-desktop-min) {
      width: 186px;
      height: 120px;
    }
  }

  .logo-text {
    width: 45px;
    height: 20px;

    @media screen and (min-width: $bp-desktop-min) {
      width: 88px;
      height: 40px;
    }
  }
</style>
