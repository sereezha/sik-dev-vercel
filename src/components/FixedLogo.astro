---
import Logo from './Logo.astro';
---

<div
  class="fixed-logo is-visible"
  data-reveal-on-back-scroll
  x-data
  x-bind:class="$store.mainHeader.isScrolling ? 'is-scrolling' : ''"
>
  <Logo />
</div>

<style lang="scss">
  .fixed-logo {
    position: fixed;
    top: var(--header-padding-block);
    left: 50%;
    transform: translateX(-50%);
    width: 93px;
    height: 60px;
    z-index: 1000;
    opacity: 0;
    pointer-events: none;
    transition: opacity 0.3s ease-in-out;

    @media screen and (max-width: $bp-desktop-max) {
      display: none;
    }
  }

  .is-visible {
    opacity: 1;
    pointer-events: auto;
  }
</style>
