---
import Paragraph from '../Paragraph.astro';
import { Icon } from 'astro-icon/components';
interface Props {
  id: string;
  showOnMount?: boolean;
  description?: string;
  showCloseButton?: boolean;
  type?: 'info' | 'success' | 'error';
}

const {
  id,
  showOnMount = false,
  description,
  type = 'info',
  showCloseButton = false,
  ...otherProps
} = Astro.props;
const titleId = `${id}-title`;
---

<div
  class:list={['modal-container', `modal-container--${type}`]}
  id={id}
  aria-labelledby={titleId}
  data-sh-modal-container
  data-sh-modal-show-on-mount={showOnMount.toString()}
  data-a11y-dialog={id}
  aria-hidden="true"
  {...otherProps}
>
  <div class="modal-overlay" data-sh-modal-action="hide"></div>
  <div class="modal" role="document">
    <div class="modal-content">
      {
        showCloseButton && (
          <button
            class="modal-close"
            type="button"
            data-sh-modal-action="hide"
            aria-label="Закрити вікно"
          >
            <Icon width={32} height={32} name="close" />
          </button>
        )
      }
      <h1 class="modal-title heading" id={titleId}>
        <slot name="title" />
      </h1>
      {
        description && (
          <div class="modal-description">
            <Paragraph set:html={description} />
          </div>
        )
      }
      <div class="modal-buttons">
        <slot name="buttons" />
      </div>
    </div>
  </div>
</div>

<style is:global lang="scss">
  .modal-close {
    position: absolute;
    top: 8px;
    right: 8px;
    display: flex;
    width: 32px;
    height: 32px;
    padding: 0;
    border: none;
    background: none;
    cursor: pointer;
  }

  .modal-container,
  .modal-overlay {
    position: fixed;
    inset: 0;
  }

  .modal-container {
    --modal-content-bg-color: #6f6f72;
    &--info .modal-content {
      --modal-content-bg-color: #6f6f72;
    }

    &--success .modal-content {
      --modal-content-bg-color: #78a782;
    }

    &--error .modal-content {
      --modal-content-bg-color: var(--main-error);
    }
  }

  .modal-container {
    z-index: 1000;
    display: flex;
  }

  .modal-container[aria-hidden='true'] {
    display: none;
  }

  .modal-overlay {
    background-color: var(--overlay-color);
  }

  .modal-description {
    max-width: 560px;
    width: 100%;
    margin-top: 24px;
  }

  .modal {
    --padding-inline: 16px;

    margin: auto;
    padding-inline: var(--padding-inline);
    z-index: 1000;
    position: relative;
    max-width: calc(72rem + 2 * var(--padding-inline));
    width: 100%;
    @media screen and (min-width: $bp-tablet-min) {
      --padding-inline: 40px;
    }
  }

  .modal-buttons button.button {
    @media screen and (max-width: $bp-tablet-max) {
      font-size: 1.7rem;
    }
  }

  .modal-content {
    position: relative;
    display: flex;
    flex-direction: column;
    padding: 24px 16px 16px;
    min-height: 406px;
    background-color: var(--modal-content-bg-color);
  }

  .modal-title {
    font-size: 2.8rem;
    line-height: 1.14;
    max-width: 66rem;

    @media screen and (min-width: $bp-tablet-min) {
      font-size: 5.6rem;
      line-height: 0.85;
    }
  }

  .modal-buttons {
    display: grid;
    gap: 8px;
    margin-top: auto;

    @media screen and (min-width: $bp-tablet-min) {
      display: grid;
      grid-auto-flow: column;
      grid-auto-columns: auto;
      align-self: end;
    }
  }
</style>

<script>
  import { ModalController } from './Modal.ts';

  window.modalController = new ModalController();
</script>
