---
interface Props {
  size?: 'medium' | 'small';
  href?: string;
  fullWidth?: boolean;
}
const { size = 'medium', href, fullWidth = false } = Astro.props;
const Tag = href ? 'a' : 'button';
---

<Tag
  type={href ? undefined : 'button'}
  href={href}
  class:list={[
    'button',
    {
      'button--full-width': fullWidth,
    },
  ]}
>
  <slot />
</Tag>

<style>
  .button {
    appearance: none;
    display: inline-flex;
    text-decoration: none;
    font-size: 21px;
    font-weight: 600;
    line-height: 1.14;
    text-align: center;
    background-color: #fcfbfa;
    color: #1a1a1f;
    padding: 0.57em 1.14em;
    border: none;
    border-radius: 2px;
  }

  .button--full-width {
    display: flex;
    width: 100%;
  }
</style>
