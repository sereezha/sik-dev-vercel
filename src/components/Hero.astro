---
import Logo from './Logo.astro';
---

<section class="hero">
  <div class="logo">
    <Logo />
  </div>
</section>

<style>
  .hero {
    display: flex;
    align-items: center;
    justify-content: center;
    height: 100vh;
    height: 100dvh;
  }

  @media screen and (min-width: 768px) {
    .hero {
      padding-block-start: 48px;
      align-items: start;
    }
  }

  @media screen and (min-width: 1024px) {
    .hero {
      padding-block-start: 16px;
    }

    .logo {
      display: none;
    }
  }
</style>
