---
import Logo from '@components/Logo.astro';
---

<section class="section">
  <div class="logo">
    <Logo isLink={false} width="100%" height="100%" />
  </div>
  <span class="logo-text">СІК</span>
</section>

<style>
  .section {
    display: grid;
    gap: 12px;
    justify-content: center;
    align-items: center;
    padding: 80px 0 112px;
    text-align: center;
  }

  .logo-text {
    font-size: 25px;
    font-weight: 600;
    line-height: 0.8;
    letter-spacing: 0.01em;
  }

  .logo {
    width: 93px;
    height: 60px;
  }

  @media screen and (min-width: 767px) {
    .section {
      gap: 24px;
    }
  }

  @media screen and (min-width: 1024px) {
    .logo {
      width: 186px;
      height: 120px;
    }

    .logo-text {
      font-size: 51px;
      line-height: 0.76;
    }
  }
</style>
