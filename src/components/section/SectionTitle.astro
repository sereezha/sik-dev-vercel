---
export interface SectionTitleProps {
  Tag?: 'h2' | 'h3' | 'h4' | 'h5' | 'h6' | 'p';
  className?: string;
  id?: string;
}

const { Tag = 'h2', className, id } = Astro.props;
---

<Tag class:list={['section-title', 'heading', className]} id={id}>
  <slot />
</Tag>

<style lang="scss">
  .section-title {
    font-size: 40px;
    line-height: 1;
    color: var(--main-white);
    @media screen and (min-width: $bp-tablet-min) {
      font-size: 56px;
      line-height: 0.87;
    }
  }
</style>
