---
export interface SectionTitleProps {
  Tag?: 'h2' | 'h3' | 'h4' | 'h5' | 'h6' | 'p';
}

const { Tag = 'p', slot } = Astro.props;
---

<Tag class="section-title heading">
  <slot />
</Tag>

<style lang="scss">
  .section-title {
    font-size: 40px;
    line-height: 1;
    color: #fcfbfa;
  }

  @media screen and (min-width: 768px) {
    .section-title {
      font-size: 56px;
      line-height: 0.87;
    }
  }
</style>
