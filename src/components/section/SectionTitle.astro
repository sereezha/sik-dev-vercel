---
export interface SectionTitleProps {
  Tag?: 'h2' | 'h3' | 'h4' | 'h5' | 'h6' | 'p';
}

const { Tag = 'p', slot } = Astro.props;
---

<Tag class="section-title">
  <slot />
</Tag>

<style>
  .section-title {
    font-size: 32px;
    font-weight: 500;
    letter-spacing: -0.32px;
    line-height: 1;
    color: var(--natural-white);
    max-width: 1040px;
    width: 100%;
    text-align: center;
  }

  @media screen and (min-width: 768px) {
    .section-title {
      font-size: 44px;
      letter-spacing: -0.44px;
    }
  }

  @media screen and (min-width: 1280px) {
    .section-title {
      font-size: 72px;
      letter-spacing: -0.72px;
    }
  }
</style>
