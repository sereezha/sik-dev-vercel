---
import Logo from './Logo.astro';
interface Props {
  theme: 'light' | 'dark';
}

const { theme = 'light' } = Astro.props;
---

<header class="header">
  <Logo theme={theme} />
</header>

<style>
  .header {
    display: flex;
    justify-content: center;
    align-items: center;
    padding: 16px 0;
  }
</style>
