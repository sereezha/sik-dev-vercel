---
import Link from '@components/Link.astro';
import HeaderLink from './HeaderLink.astro';
import BaseHeader from './BaseHeader.astro';
import { AnchorLinks } from 'src/config';
---

<BaseHeader className="header" hasMobileView>
  <Fragment slot="links">
    <HeaderLink data-header-link href={AnchorLinks.howItWorks}>Як це працює</HeaderLink>
    <HeaderLink data-header-link href={AnchorLinks.whatsInside}>Що всередині</HeaderLink>
    <HeaderLink data-header-link href={AnchorLinks.subscribe}>Яке Вино</HeaderLink>
    <HeaderLink data-header-link href={AnchorLinks.forWho}>Для кого</HeaderLink>
  </Fragment>
  <div slot="actions">
    <Link href={AnchorLinks.subscribe} isAnchor withIcon>Підписатись</Link>
  </div>
</BaseHeader>

<style>
  .header {
    position: sticky;
    top: 0;
    left: 0;
    z-index: 999;
    display: flex;
    justify-content: space-between;
    gap: 12px;
  }
</style>
