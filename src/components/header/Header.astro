---
interface Props {
  className?: string;
}

const { className } = Astro.props;
---

<header class:list={['header', className]}>
  <div class="links">
    <slot name="links" />
  </div>
  <slot name="logo" />
</header>

<style>
  .header {
    position: relative;
    padding: 16px 24px;
  }

  .links {
    display: flex;
    align-items: center;
    gap: 16px;
  }
</style>
