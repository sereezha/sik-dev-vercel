---
interface Props {
  className?: string;
}

const { className } = Astro.props;
---

<header class:list={['header', className]}>
  <nav class="links">
    <slot name="links" />
  </nav>
  <slot name="logo" />
  <slot name="actions" />
</header>

<style>
  :root {
    --header-padding-inline: 24px;
    --header-padding-block: 16px;
  }

  .header {
    position: relative;
    padding: var(--header-padding-block) var(--header-padding-inline);
  }

  .links {
    display: flex;
    align-items: center;
    gap: 16px;
  }
</style>
