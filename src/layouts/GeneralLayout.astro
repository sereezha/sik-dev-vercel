---
import Footer from '@components/Footer.astro';
import Header from '@components/Header.astro';
import '../styles/global.css';
import Toast from '@components/toast/Toast.astro';
import Favicons from '@components/head/Favicons.astro';
import CommonMeta from '@components/head/CommonMeta.astro';
import Seo from '@components/head/Seo.astro';
import FacebookAnalytics from '@components/head/analytics/FacebookAnalytics.astro';
import GoogleAnalytics from '@components/head/analytics/GoogleAnalytics.astro';
import FacebookAnalyticsNoscript from '@components/head/analytics/FacebookAnalyticsNoscript.astro';
import GoogleAnalyticsNoscript from '@components/head/analytics/GoogleAnalyticsNoscript.astro';
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="uk">
  <head>
    <CommonMeta />
    <Seo />
    <Favicons />
    <link
      rel="preload"
      as="image"
      href="./assets/video-thumbnail.png"
      fetchpriority="high"
    />
    <meta name="theme-color" content="#252124" />
    {
      import.meta.env.SHOULD_SHOW_ANALYTICS === 'true' && (
        <>
          <FacebookAnalytics />
          <GoogleAnalytics />
        </>
      )
    }
  </head>
  <body>
    {
      import.meta.env.SHOULD_SHOW_ANALYTICS === 'true' && (
        <>
          <FacebookAnalyticsNoscript />
          <GoogleAnalyticsNoscript />
        </>
      )
    }
    <Header />
    <slot />
    <Footer />
    <Toast />
  </body>
</html>
